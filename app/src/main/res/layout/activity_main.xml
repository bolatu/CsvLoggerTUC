<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bolatu.csvloggertuc.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/editTextX"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:text="X" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="Y" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="4"
            android:gravity="center"
            android:text="Ref Label" />

        <EditText
            android:id="@+id/editTextY"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextRefLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_row="4"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/checkBoxMf"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="5"
            android:checked="false"
            android:gravity="center"
            android:text="MF" />

        <CheckBox
            android:id="@+id/checkBoxWifi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_row="5"
            android:checked="false"
            android:gravity="center"
            android:text="WIFI" />

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="8"
            android:text="START" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="9" />

        <CheckBox
            android:id="@+id/checkBoxBt"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_row="6"
            android:checked="false"
            android:gravity="center"
            android:text="BT_Classic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="center"
            android:text="Floor" />

        <EditText
            android:id="@+id/editTextFloor"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/checkBoxCell"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_row="7"
            android:checked="false"
            android:gravity="center"
            android:text="Cell" />

        <CheckBox
            android:id="@+id/checkBoxBle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_row="6"
            android:checked="false"
            android:gravity="center"
            android:text="BLE" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="Scan No" />

        <EditText
            android:id="@+id/editTextScanNo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

    </GridLayout>

</RelativeLayout>
